<?xml version="1.0"?>
<ruleset name="BasePHPStandard">
    <description>Generic base rules for PHP projects</description>

    <!-- Include PSR12 standard for modern PHP style rules -->
    <rule ref="PSR12" />

    <!-- Include generic rules provided by PHP_CodeSniffer -->
    <rule ref="Generic" />

    <!-- Exclude scanning of irrelevant folders -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>node_modules/*</exclude-pattern>
    <exclude-pattern>storage/*</exclude-pattern>
    <exclude-pattern>bootstrap/cache/*</exclude-pattern>

    <!-- Include typical PHP and related files -->
    <file>./app</file>
    <file>./src</file>
    <file>./tests</file>
    <file>./modules</file>
    <file>./themes</file>
    <file>./includes</file>
    <file>./wp-content</file>

    <!-- Limit file extensions to scan -->
    <arg name="extensions" value="php,inc,module,install,test,profile,theme,css,info,txt,yml" />

    <!-- Disable rule that disallows long array syntax to avoid false positives -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax">
        <severity>0</severity>
    </rule>

</ruleset>